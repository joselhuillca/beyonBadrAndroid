<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.badr.nwes.beyondbadr">

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize|keyboardHidden"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".puzzle.PuzzleActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".FirstLevelActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".reader.FullScreenAnimatedActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
        <activity
            android:name=".reader.content.CropExpandingActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
        <activity
            android:name=".FirstLevelTabActivitySmartPhone"
            android:label="@string/title_activity_first_level_tab_smart_phone"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".SmartPhone.NavigatorBadrSmartphone"
            android:label="@string/title_activity_navigator_badr_smartphone"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".SmartPhone.Glide.activity.SlideShowActivity"></activity>
    </application>

</manifest>